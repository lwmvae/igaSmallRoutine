.container {
   margin-bottom: 50px;  
}

.head {
  height: 150px;
  background-color: rgba(0, 0, 0, 0.5);
  position: relative;
}

.head .title {
  position: relative;
  top: 110px;
  z-index: 1;
  text-align: center;
  font-size: 1rem;
}

.head .background {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  -webkit-filter: blur(5px);
}

.head image {
  width: 100%;
  height: 150px;
}

.info {
  padding: 0 10px;
}

.info .info-wrapper {
  display: block;
  font-size: 14px;
  text-indent: 1rem;
  line-height: 25px;
}

.chapter-list {
  padding: 0 10px;
}

.chapter-list .title {
  display: block;
  font-size: 16px;
  color: #000;
  margin-top: 10px;
}

.chapter-list .detail {
  display: block;
  padding: 0 10px;
  color: #666;
  margin-top: 10px;
}

.btn button {
  width: 100%;
  font-size: 16px;
  border-radius: 0;
  position: fixed;
  bottom: 0;
  left: 0;
}
