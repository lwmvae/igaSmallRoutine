.container {
}

.no-sign {
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
}

.no-sign button {
  display: block;
  width: 50vw;
  background-color: #09bb07;
  color: #fff;
}

.head {
  text-align: center;
  padding: 20px 0;
}

.head image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.head icon {
  position: relative;
  top: 2px;
}

.edit-info {
  margin-top: 5px;
}

.head .edit {
  margin-left: 5px;
  color: #999;
}

.gray {
  height: 20px;
  background-color: #dfdfdf;
}

.content {
  display: flex;
  flex-wrap: wrap;
}

.content-wrapper {
  flex: 0 0 33.33%;
  text-align: center;
  padding: 20px 0;
}

.content .text {
  display: block;
  font-size: 16px;
  margin-top: 5px;
}
